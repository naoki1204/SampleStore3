<div id="<%= dom_id product %>">
  <p>
    <strong>Number:</strong>
    <%= product.number %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Unit price:</strong>
    <%= product.unit_price %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= product.image %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

    <strong>Quantity:</strong>
    <%= number_with_precision(product.quantity,precision: 0,strip_insignificant_zeros: true) %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= product.category_id %>
  </p>

</div>
